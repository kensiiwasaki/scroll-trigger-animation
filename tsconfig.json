{
  "compilerOptions": {
    "target": "ES2015",
    "module": "UMD",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
